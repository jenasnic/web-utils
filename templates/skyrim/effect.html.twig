{#
@var \App\Entity\Skyrim\Effect effect
@var array<\App\Entity\Skyrim\Ingredient> ingredients
#}

<h2>Ingrédients associés pour : <strong>{{ effect.nameFR }} ({{ effect.nameEN }})</strong></h2>

<table>
    <thead>
        <tr><th>Ingrédient</th><th>Effets</th></tr>
    </thead>
    <tbody>
    {% for ingredient in ingredients %}
        <tr>
            <td>{{ ingredient.nameFR }} ({{ ingredient.nameEN }})</td>
            <td>
                <ul>
                {% for effect in ingredient.effects %}
                    <li>{{ effect.nameFR }} ({{ effect.nameEN }})</li>
                {% endfor %}
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
        <tr><td colspan="2">Total : {{ ingredients|length }} ingrédients</td></tr>
    </tfoot>
</table>
